{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "typeRoots": [
         "node_modules/@types"
      ],
      "skipLibCheck": true
   },
   "exclude": ["node_modules", "test", "dist", "**/*.test.ts"]
}